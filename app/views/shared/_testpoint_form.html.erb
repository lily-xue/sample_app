 <%= form_for (@testpoint) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
<%= f.label :id %>
<%= f.text_area :id %>

<%= f.label :firsttheme %>
<%= f.text_area :firsttheme %>

<%= f.label :secondtheme %>
<%= f.text_area :secondtheme %>

<%= f.label :thirdtheme %>
<%= f.text_area :thirtheme %>

<%= f.label :测试点 %>    
<%= f.text_area :testpoint, placeholder: "发布新微博..." %>

